    <script>

      var cutoff = $("#nav").offset().top;

      $("#nav-portfolio").click(function() {
        $('html, body').animate({
          scrollTop: 0
        }, 500);
      });

      $("#nav-about").click(function() {
        $('html, body').animate({
          scrollTop: $("#about").offset().top - 80
        }, 500);
      });

      $("#nav-contact").click(function() {
        $('html, body').animate({
          scrollTop: $("#contact").offset().top - 80
        }, 500);
      });

      $(window).scroll(function() {
        var scroll = $(window).scrollTop();

        if (scroll > cutoff) {
          $("#nav").addClass("fix-nav");
        } else {
          $("#nav").removeClass("fix-nav");
        }

        if (scroll + $(window).height() / 2 > $("#contact").offset().top) {
          $("#nav-portfolio").removeClass("selected");
          $("#nav-about").removeClass("selected");
          $("#nav-contact").addClass("selected");
        } else if (scroll + $(window).height() / 2 > $("#about").offset().top) {
          $("#nav-portfolio").removeClass("selected");
          $("#nav-about").addClass("selected");
          $("#nav-contact").removeClass("selected");
        } else {
          $("#nav-portfolio").addClass("selected");
          $("#nav-about").removeClass("selected");
          $("#nav-contact").removeClass("selected");
        }
      });

    </script>
